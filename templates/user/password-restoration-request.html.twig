{% extends 'base.html.twig' %}
{% block title %}Password restoration request{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/resend-confirmation-form.css') }}">
{% endblock %}
{% block body %}
    {% include '_flash-messages.html.twig' %}
    {{ form_start(form, {'attr': {'class': 'form-signin', 'novalidate': 'novalidate'}}) }}
    <img class="mb-4 my-4" src="{{ asset('images/square-logo-72.png') }}" alt="" width="72" height="72">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ 'title.renew_password'|trans }}</h5>
            <p class="card-text">{{ 'text.renew_password'|trans }}</p>
        </div>
    </div>
    {{ form_label(form.email, 'title.email', {'label_attr': {'class': 'sr-only'}}) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'title.email', 'autofocus': 'autofocus'}}) }}
    <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'button.send'|trans }}</button>
    {{ form_end(form) }}
{% endblock %}
