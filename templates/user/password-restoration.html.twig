{% extends 'base.html.twig' %}
{% block title %}Password restoration{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login-form.css') }}">
{% endblock %}
{% block body %}
    {% include '_flash-messages.html.twig' %}
    {{ form_start(form, {'attr': {'class': 'form-signin'}}) }}
    <img class="mb-4 my-4" src="{{ asset('images/square-logo-72.png') }}" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">{{ 'title.input_new_password'|trans }}</h1>
    {{ form_label(form.plainPassword.first, 'title.password', {'label_attr': {'class': 'sr-only'}}) }}
    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'title.password'}}) }}
    {{ form_label(form.plainPassword.second, 'title.password', {'label_attr': {'class': 'sr-only'}}) }}
    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'title.password'}}) }}
    <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'button.password_change'|trans }}</button>
    {{ form_end(form) }}
{% endblock %}
